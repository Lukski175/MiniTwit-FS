{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "MiniTwitAPI.Controllers": "Debug"
    },
    "Console": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft.AspNetCore": "Warning",
        "MiniTwitAPI.Controllers": "Debug"
      }
    },
    "Debug": {
      "LogLevel": {
        "Default": "Debug"
      }
    },
    "File": {
      "Path": "logs/minitwit-api-log.txt",
      "Append": true,
      "MinLevel": "Information",
      "FileSizeLimitBytes": 10485760,
      "MaxRollingFiles": 5
    }
  },
  "AllowedHosts": "*"
}
