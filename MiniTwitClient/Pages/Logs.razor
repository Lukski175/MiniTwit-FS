@page "/logs"

<PageTitle>Logs</PageTitle>

<h1 class="text-2xl font-bold mb-4">Live Logs</h1>

<div class="mt-4 flex justify-between items-center">
    <span>Page @currentPage</span>
    <button class="px-4 py-2 bg-gray-800 text-white rounded" @onclick="LoadNextPage">Next</button>
</div>

<div class="bg-black text-green-400 font-mono p-4 rounded shadow max-h-[500px] overflow-y-auto whitespace-pre-wrap">
    @if (_logMessages.Count == 0)
    {
        <div>Loading logs...</div>
    }
    else
    {
        @foreach (var log in _logMessages)
        {
            <div>@log</div>
        }
    }
</div>