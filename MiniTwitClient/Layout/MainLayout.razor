@inherits LayoutComponentBase
<ToastContainer />

<div class="page">
	<main>

		<!-- Fixed Navbar -->
		<nav class="bg-gray-800 fixed top-0 left-0 w-full z-50 shadow-lg">
			<div class="mx-auto max-w-7xl px-2 sm:px-6 lg:px-8">
				<div class="relative flex h-16 items-center justify-between">
					<div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
						<div class="flex shrink-0 items-center">
							<img class="h-8 w-auto" src="Images\MiniTwitLogoTransparent.png" alt="MiniTwit">
						</div>
						<div class="hidden sm:ml-6 sm:block">
							<div class="flex space-x-4">
								<a href="public" class="rounded-md bg-gray-900 px-3 py-2 text-sm font-medium text-white border border-black" aria-current="page">Home</a>
							</div>
						</div>
					</div>
					<div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">
						<button type="button" class="relative rounded-full bg-gray-800 p-1 text-gray-400 hover:text-white focus:ring-2 focus:ring-white focus:ring-offset-2 focus:ring-offset-gray-800 focus:outline-hidden">
							<span class="absolute -inset-1.5"></span>
							<span class="sr-only">View notifications</span>
							<svg class="size-6" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true" data-slot="icon">
								<path stroke-linecap="round" stroke-linejoin="round" d="M14.857 17.082a23.848 23.848 0 0 0 5.454-1.31A8.967 8.967 0 0 1 18 9.75V9A6 6 0 0 0 6 9v.75a8.967 8.967 0 0 1-2.312 6.022c1.733.64 3.56 1.085 5.455 1.31m5.714 0a24.255 24.255 0 0 1-5.714 0m5.714 0a3 3 0 1 1-5.714 0" />
							</svg>
						</button>
						@if (!UserState.IsLoggedIn)
						{
							<div class="flex flex-1 items-center justify-center sm:items-stretch sm:justify-start">
								<div class="hidden sm:ml-6 sm:block">
									<div class="flex space-x-4">
										<a href="register" class="rounded-md bg-blue-500 px-3 py-2 text-sm font-medium text-white" aria-current="page">Create account</a>
									</div>
								</div>
								<div class="hidden sm:ml-6 sm:block">
									<div class="flex space-x-4">
										<a href="login" class="rounded-md bg-cyan-900 px-3 py-2 text-sm font-medium text-white border border-black" aria-current="page">Sign in</a>
									</div>
								</div>
							</div>
						}
						else
						{
							<a @onclick="MyPage" class="inline-block">
								<img class="h-12 w-12 rounded-full object-cover mr-4 cursor-pointer hover:ring-2 hover:ring-blue-500 transition-all"
									 src="https://t3.ftcdn.net/jpg/05/16/27/58/360_F_516275801_f3Fsp17x6HQK0xQgDQEELoTuERO4SsWV.jpg"
									 alt="User profile picture" />
							</a>

							<div class="hidden sm:ml-6 sm:block">
								<div class="flex space-x-4">
									<a @onclick=Logout href="login" class="rounded-md bg-cyan-900 px-3 py-2 text-sm font-medium text-white border border-black" aria-current="page">Sign out</a>
								</div>
							</div>
						}
					</div>
				</div>
			</div>
		</nav>

		<!-- Add padding to prevent content from being hidden under fixed navbar -->
		<div class="pt-16 px-4">
			@Body
		</div>
	</main>
</div>